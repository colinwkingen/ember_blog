
<fieldset>
  <legend>New Comment</legend>
  <form>
    <div class="form-group">
      <label for="author">Author:</label>
      {{input class="form-control" value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="comment">Comment:</label>
      {{textarea class="form-control" value=comment id="comment"}}
    </div>
    <button class="btn btn-lg btn-success" {{action 'addComment1'}}>Add comment</button>
  </form>
</fieldset>
